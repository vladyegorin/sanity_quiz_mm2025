<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARE YOU READY TO DESCEND?"
            android:textSize="32sp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.3"
            android:shadowColor="#44000000"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <!-- Subtitle (Provocative Questions) -->
        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you hear voices when no one speaks?\nDo shadows follow you in the light?\nAre you truly... sane?"
            android:textSize="18sp"
            android:textColor="#FFAAAA"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="8dp" />


        <ImageView
            android:id="@+id/creepyBackground"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="16dp"
            android:alpha="0.6"
            android:scaleType="centerCrop"
            android:src="@drawable/creepy_image" />

        <!-- Begin Descent Button -->
        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEGIN YOUR DESCENT"
            android:textColor="#000000"
            android:background="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

        <!-- Warning Text -->
        <TextView
            android:id="@+id/warningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARNING: THIS JOURNEY MAY UNSETTLE YOUR MIND."
            android:textSize="14sp"
            android:textColor="#FF4444"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.2" />

    </LinearLayout>
</ScrollView>